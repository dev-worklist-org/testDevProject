<!DOCTYPE html>
<html lang="en">
<head>
    <meta http-equiv="Content-Type" content="text/html; charset=utf-8" />
    <base href="{{app.url}}" />
    {{> meta/copyright}}
    {{> meta/favicon}}
    {{& styleTags}}
    <script type="text/javascript">
        var userId = user_id = {{currentUser.id}};
        var is_runner = {{#currentUser.is_runner}}true{{/currentUser.is_runner}}{{^currentUser.is_runner}}false{{/currentUser.is_runner}};
        var projectsAsRunner = {{& currentUser.runningProjects}};
        var is_admin = {{#currentUser.is_admin}}true{{/currentUser.is_admin}}{{^currentUser.is_admin}}false{{/currentUser.is_admin}};
        var is_payer = {{#currentUser.is_payer}}true{{/currentUser.is_payer}}{{^currentUser.is_payer}}false{{/currentUser.is_payer}};
        var budgetAuthorized = {{#currentUser.budgetAuthorized}}true{{/currentUser.budgetAuthorized}}{{^currentUser.budgetAuthorized}}false{{/currentUser.budgetAuthorized}};
        var worklistUrl = '{{app.url}}';
        var selfLink = '{{app.self_url}}';
        var sessionusername = '{{currentUser.username}}';
        var ajaxRefresh = {{config.ajaxRefresh}} * 1000;
        var redir_url = '{{redir_url}}';
    </script>
    {{& scriptTags}}
    <script type="text/javascript">
        $(function() {
            NewWorklist.init();
        });
    </script>
    {{> meta/opengraph}}
    <meta name="viewport" content="width=device-width, minimum-scale=1.0, maximum-scale=1.0">
    <title>{{title}}</title>
</head>
<body>
    {{> navbar}}
    {{#jumbotron}}
    <div class="jumbotron">
        {{& jumbotron}}
    </div>
    {{/jumbotron}}
    <section class="container-fluid">
        {{& content}}
    </section>
    {{> footer}}
    {{> popup-addproject}}
    {{> footer-analytics}}
</body>
